<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="capture.capculator.Home"
    android:background="@drawable/homebg">

    <ImageView
        android:id="@+id/center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:background="#FFFF0000"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bAddModule"
        android:src="@drawable/addmodule"
        android:background="@android:color/transparent"
        android:layout_below="@+id/tvProgressChart"
        android:layout_toLeftOf="@+id/center"
        android:layout_toStartOf="@+id/center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Add Module"
        android:id="@+id/tvAddModule"
        android:layout_above="@+id/bAddModule"
        android:layout_alignLeft="@+id/bAddModule"
        android:layout_alignStart="@+id/bAddModule" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bProgressChart"
        android:src="@drawable/progresschart"
        android:background="@android:color/transparent"
        android:layout_above="@+id/bTargetSetting"
        android:layout_alignLeft="@+id/tvProgressChart"
        android:layout_alignStart="@+id/tvProgressChart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Progress Chart"
        android:id="@+id/tvProgressChart"
        android:layout_above="@+id/bProgressChart"
        android:layout_alignLeft="@+id/tvModuleList"
        android:layout_alignStart="@+id/tvModuleList" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bTargetSetting"
        android:src="@drawable/targetsetting"
        android:background="@android:color/transparent"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/tvTargetSetting"
        android:layout_alignEnd="@+id/tvTargetSetting" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Target Setting"
        android:id="@+id/tvTargetSetting"
        android:layout_below="@+id/bTargetSetting"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bModuleList"
        android:src="@drawable/modulelist"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/bScenarioList"
        android:layout_alignRight="@+id/bProgressChart"
        android:layout_alignEnd="@+id/bProgressChart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Module List"
        android:id="@+id/tvModuleList"
        android:layout_below="@+id/bModuleList"
        android:layout_toLeftOf="@+id/tvTargetSetting"
        android:layout_toStartOf="@+id/tvTargetSetting" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bScenarioList"
        android:src="@drawable/scenariolist"
        android:background="@android:color/transparent"
        android:layout_below="@+id/tvExamReminder"
        android:layout_toLeftOf="@+id/center"
        android:layout_toStartOf="@+id/center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Scenario List"
        android:id="@+id/tvScenarioList"
        android:layout_below="@+id/bScenarioList"
        android:layout_toLeftOf="@+id/center"
        android:layout_toStartOf="@+id/center" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bExamReminder"
        android:src="@drawable/examreminder"
        android:background="@android:color/transparent"
        android:layout_above="@+id/tvExamReminder"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Exam Reminder"
        android:id="@+id/tvExamReminder"
        android:layout_below="@+id/bTargetSetting"
        android:layout_alignRight="@+id/bExamReminder"
        android:layout_alignEnd="@+id/bExamReminder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MY CAP"
        android:id="@+id/capView"
        android:layout_alignTop="@+id/center"
        android:layout_centerHorizontal="true" />


</RelativeLayout>