<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="capture.capculator.CurrentScenario"
    android:background="@color/material_blue_grey_900">

    <ToggleButton
        android:text="New ToggleButton"
        android:id="@+id/toggleButton"
        android:layout_column="1"
        android:layout_height="170dip"
        android:layout_width="170dip"
        android:textOn="MOD CODE, MC, GRADE, S/U"
        android:textOff="SCENARIO CAP"
        android:background="@drawable/circle"
        android:clickable="true"
        android:textColor="@color/material_blue_grey_900"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/toggleButton2" />

    <ToggleButton
        android:text="New ToggleButton"
        android:id="@+id/toggleButton2"
        android:layout_column="1"
        android:layout_height="170dip"
        android:layout_width="170dip"
        android:textOn="MOD CODE, MC, GRADE, S/U"
        android:textOff="SCENARIO CAP"
        android:background="@drawable/circle"
        android:clickable="true"
        android:textColor="@color/material_blue_grey_900"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/toggleButton"
        android:layout_above="@+id/toggleButton3"
        android:layout_alignRight="@+id/toggleButton5"
        android:layout_alignEnd="@+id/toggleButton5" />

    <ToggleButton
        android:text="New ToggleButton"
        android:id="@+id/toggleButton3"
        android:layout_column="1"
        android:layout_height="170dip"
        android:layout_width="170dip"
        android:textOn="MOD CODE, MC, GRADE, S/U"
        android:textOff="SCENARIO CAP"
        android:background="@drawable/circle"
        android:clickable="true"
        android:textColor="@color/material_blue_grey_900"
        android:layout_below="@+id/toggleButton"
        android:layout_toStartOf="@+id/toggleButton5"
        android:layout_above="@+id/toggleButton6"
        android:layout_toLeftOf="@+id/toggleButton5" />

    <ToggleButton
        android:text="New ToggleButton"
        android:id="@+id/toggleButton4"
        android:layout_column="1"
        android:layout_height="170dip"
        android:layout_width="170dip"
        android:textOn="MOD CODE, MC, GRADE, S/U"
        android:textOff="SCENARIO CAP"
        android:background="@drawable/circle"
        android:clickable="true"
        android:textColor="@color/material_blue_grey_900"
        android:layout_below="@+id/toggleButton3"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/toggleButton5"
        android:layout_toStartOf="@+id/toggleButton5" />

    <ToggleButton
        android:text="New ToggleButton"
        android:id="@+id/toggleButton5"
        android:layout_column="1"
        android:layout_height="170dip"
        android:layout_width="170dip"
        android:textOn="MOD CODE, MC, GRADE, S/U"
        android:textOff="SCENARIO CAP"
        android:background="@drawable/circle"
        android:clickable="true"
        android:textColor="@color/material_blue_grey_900"
        android:layout_below="@+id/toggleButton"
        android:layout_toRightOf="@+id/toggleButton"
        android:layout_above="@+id/toggleButton4"
        android:layout_alignRight="@+id/toggleButton6"
        android:layout_alignEnd="@+id/toggleButton6" />

    <ToggleButton
        android:text="New ToggleButton"
        android:id="@+id/toggleButton6"
        android:layout_column="1"
        android:layout_height="170dip"
        android:layout_width="170dip"
        android:textOn="MOD CODE, MC, GRADE, S/U"
        android:textOff="SCENARIO CAP"
        android:background="@drawable/circle"
        android:clickable="true"
        android:textColor="@color/material_blue_grey_900"
        android:layout_below="@+id/toggleButton5"
        android:layout_toRightOf="@+id/toggleButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/toggleButton5"
        android:layout_alignEnd="@+id/toggleButton5" />

</RelativeLayout>
